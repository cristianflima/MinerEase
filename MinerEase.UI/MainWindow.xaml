<Window x:Class="MinerEase.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinerEase"
        Height="420"
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Pool -->
            <RowDefinition Height="Auto"/>
            <!-- Wallet -->
            <RowDefinition Height="Auto"/>
            <!-- Validação -->
            <RowDefinition Height="*"/>
            <!-- Botão -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="MinerEase"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Status -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="1"
                   Margin="0,15,0,10"
                   Text="Status: Parado"
                   FontSize="14"
                   HorizontalAlignment="Center"/>

        <!-- Pool -->
        <ComboBox x:Name="PoolCombo"
                  Grid.Row="2"
                  Height="30"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="HashVault (XMR)"/>
        </ComboBox>

        <!-- Wallet -->
        <StackPanel Grid.Row="3" Margin="0,0,0,5">
            <TextBlock Text="Endereço da Wallet Monero"
                       FontSize="12"
                       Margin="0,0,0,3"/>

            <TextBox x:Name="WalletTextBox"
                     Height="28"
                     TextChanged="WalletTextBox_TextChanged"/>
        </StackPanel>

        <!-- Validação da Wallet -->
        <TextBlock x:Name="WalletValidationText"
                   Grid.Row="4"
                   FontSize="12"
                   Foreground="Red"
                   Margin="0,0,0,15"/>

        <!-- Botão -->
        <Button x:Name="StartStopButton"
                Grid.Row="5"
                Height="45"
                Content="Iniciar Mineração"
                Click="StartStopButton_Click"/>
    </Grid>
</Window>